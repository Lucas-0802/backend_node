generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Readings {
  measure_uuid String @id @default(auto()) @map("_id") @db.ObjectId 
  customer_code String
  measure_value Float
  measure_datetime DateTime
  measure_type String
  image_url String
  has_confirmed Boolean 
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("readings")
}